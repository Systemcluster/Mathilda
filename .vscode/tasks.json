{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--bin",
				"mathilda",
				"--features",
				"shaderinfo,hotreload"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"RUST_BACKTRACE": "full",
					"LOG_LEVEL": "info",
					"RUSTFLAGS": "-Zunstable-options -Ctarget-cpu=haswell -Ctarget-feature=-crt-static,+aes"
				}
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"RUST_BACKTRACE": "full",
					"LOG_LEVEL": "warn",
					"RUSTFLAGS": "-Zunstable-options -Zthinlto -Zstrip-debuginfo-if-disabled=yes -Ctarget-cpu=haswell -Ctarget-feature=+crt-static,+aes"
				}
			}
		},
		{
			"label": "test",
			"type": "shell",
			"command": "cargo",
			"args": [
				"test"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"RUST_BACKTRACE": "full",
					"LOG_LEVEL": "debug",
					"RUSTFLAGS": "-Zunstable-options -Ctarget-cpu=haswell -Ctarget-feature=-crt-static,+aes"
				}
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "bench",
			"type": "shell",
			"command": "cargo",
			"args": [
				"bench"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"RUST_BACKTRACE": "full",
					"LOG_LEVEL": "debug",
					"RUSTFLAGS": "-Zunstable-options -Zthinlto -Ctarget-cpu=haswell -Ctarget-feature=-crt-static,+aes"
				}
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}
